<% @cupcakes.each do |elem| %>
  <div class="container>
   <div class="row">
    <div class="card" style="width:40rem; margin-left:auto; margin-right:auto; padding:40px; margin-top:20px;">
     <img src="<%= elem.src %>" class="card-img-top">
      <div class="card-body">
      <h7><%= elem.name %></h7>
      <h7><%= elem.description %></h7>
      <h7><%= elem.price %></h7>
      </div>
    </div>
  </div>
</div>
</div>
<% end %>